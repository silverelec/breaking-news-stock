# API Keys and Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# News APIs
NEWSAPI_KEY=your_newsapi_key_here
ALPHAVANTAGE_KEY=your_alphavantage_key_here

# Financial Data
POLYGON_API_KEY=your_polygon_or_massive_key_here
FINNHUB_API_KEY=your_finnhub_key_here

# Anthropic (Claude)
ANTHROPIC_API_KEY=your_anthropic_key_here

# Email (Gmail SMTP)
# EMAIL_PASSWORD must be a Gmail App Password — NOT your Gmail login password
# Setup: myaccount.google.com → Security → 2-Step Verification → App Passwords
EMAIL_FROM=your_gmail@gmail.com
EMAIL_TO=recipient@gmail.com
EMAIL_PASSWORD=your_gmail_app_password

# Personalization
RECIPIENT_NAME=YourName
